# MCP Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8080

# Storage Configuration
MCP_STORAGE_PATH=./data

# Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=crawl4ai_vectors

# Graph Database Configuration
MEMGRAPH_URL=bolt://localhost:7687
MEMGRAPH_USER=
MEMGRAPH_PASSWORD=

# Crawler Configuration
CRAWLER_USER_AGENT=Mozilla/5.0 (compatible; Crawl4AI-Rust/1.0; +https://github.com/yourusername/crawl4ai-rust-mcp)
CRAWLER_MAX_CONCURRENT_REQUESTS=10
CRAWLER_REQUEST_TIMEOUT=30
CRAWLER_MAX_DEPTH=3
CRAWLER_RATE_LIMIT_DELAY_MS=1000

# Embeddings Configuration
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDINGS_DEVICE=auto
EMBEDDINGS_BATCH_SIZE=32
EMBEDDINGS_MAX_LENGTH=512

# Search Configuration
SEARCH_MAX_RESULTS=20
SEARCH_MIN_SCORE=0.7

# Logging Configuration
RUST_LOG=info,mcp_server=debug,crawler=debug
RUST_BACKTRACE=1

# Performance Configuration
TOKIO_WORKER_THREADS=4
RAYON_NUM_THREADS=

# Security Configuration
API_KEY=
ALLOWED_ORIGINS=*
MAX_REQUEST_SIZE=10485760

# Storage Backend Configuration
STORAGE_BACKEND=hybrid
ROCKSDB_PATH=./data/rocksdb
DUCKDB_PATH=./data/analytics.db
MMAP_PATH=./data/content

# Binary Quantization Configuration
ENABLE_BINARY_QUANTIZATION=true
QUANTIZATION_THRESHOLD=1000

# Cache Configuration
CACHE_SIZE_MB=1024
CACHE_TTL_SECONDS=3600

# Model Cache Configuration
MODEL_CACHE_DIR=./models

# Development Configuration
DEV_MODE=false